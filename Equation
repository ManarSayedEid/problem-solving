Link: https://codeforces.com/group/MWSDmqGsZm/contest/223205/problem/F

#include <iostream>
#include <cmath>
using namespace std;

long long int equation(int x, int n){
    long long int sum = 0;
    
    for (int i=2; i<=n; i+=2)
        sum += pow(x,i);
    
    return sum;  
    
}

int main()
{
    int x,n;
    cin>>x>>n;
    
    cout<<equation(x,n);

    return 0;
}
