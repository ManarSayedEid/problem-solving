Link: https://codeforces.com/group/MWSDmqGsZm/contest/219856/problem/D

#include <iostream>

using namespace std;

int main()
{
    string x,y;
    cin>>x>>y;
    
    cout<<x.size()<<" "<<y.size()<<"\n"
        <<x+y<<endl;
        
    char temp_x= x[0];
    x[0]=y[0];
    y[0]= temp_x;
    
    cout<<x<<" "<<y;
    
    
    return 0;
}
