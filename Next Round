Link: http://codeforces.com/contest/158/problem/A

#include <iostream>

using namespace std;

int main()
{
    int n,k,num,cnt=0;
cin>>n>>k;
int arr[n];

for (int i=0; i<n; i++){
    cin>>arr[i];

    if (i == k-1)
        num=arr[i];
}

for (int i=0; i<n; i++){
    if (arr[i] >= num && arr[i] > 0)
        cnt++;
}
cout<<cnt;
    
    
      
    
  return 0;
}
