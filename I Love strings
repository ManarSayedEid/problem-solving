Link: https://codeforces.com/group/MWSDmqGsZm/contest/219856/problem/K

#include <iostream>
using namespace std;

int main()
{
    int t;
    cin>>t;

    while(t--){
    int mx_size;
    string str1,str2;
    cin>>str1>>str2;

    if (str1.size() >= str2.size())
        mx_size=str1.size();
    else
        mx_size=str2.size();

    for (int i=0; i<mx_size; i++){
        if (i<str1.size())
            cout<<str1[i];

        if (i<str2.size())
            cout<<str2[i];
    }
    
    cout<<endl;
}

    return 0;
}
