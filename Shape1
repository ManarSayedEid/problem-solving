Link: http://codeforces.com/group/MWSDmqGsZm/contest/219432/problem/P

#include <iostream>
using namespace std;

int main()
{
  int N;
  cin>>N;
  
  string star = "*";
  int row=N;
  while (N--)
  {
      for (int i = 1; i<=row; i++)
          cout<<star;
          
    cout<<endl;
    row--;
  }
    
    return 0;
}
